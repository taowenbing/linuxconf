Xft.antialias: 1
Xft.dpi: 96
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

!look and feel
xterm.termName: xterm-256color
xterm*geometry: 90x32
xterm*scrollBar: false
xterm*rightScrollBar: true
xterm*loginshell: true
!xterm*cursorBlink: true
xterm*background: black
xterm*foreground: gray
xterm.borderLess: true
xterm.cursorBlink: true
!xterm.colorUL: yellow3
!xterm.colorBD: Green

!fix alt key input
xterm*eightBitInput: false
xterm*altSendsEscape: true

!font and locale
!xterm*locale: true
!xterm.utf8: true
!xterm*utf8Title: true
!xterm*fontMenu*fontdefault*Label: Default
!xterm*faceName: DejaVu Sans Mono:antialias=True:pixelsize=13
!!xterm*faceName: monofur:antialias=True:pixelsize=20
!!xterm*boldFont: DejaVu Sans Mono:style=Bold:pixelsize=15
!xterm*faceNameDoublesize: SimSun:pixelsize=13:antialias=True
!xterm*xftAntialias: true
!xterm*cjkWidth:false

